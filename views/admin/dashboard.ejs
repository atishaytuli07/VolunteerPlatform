<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .flash-message {
            margin-bottom: 20px;
        }
        .request-assistance-section, .queries-section {
            border: 2px solid #030c16;
            border-radius: 10px;
            background-color: #f8f9fa;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .request-assistance-section h3, .queries-section h3 {
            color: #030f1c;
            font-weight: bold;
        }
        .table-hover tbody tr:hover {
            background-color: #e9ecef;
        }
        .request-assistance-section .btn-primary, .queries-section .btn-primary {
            padding: 10px 20px;
            font-size: 1.1rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <a href="/admin/logout" class="btn btn-danger mt-4">Logout</a>
        
        <h1 class="text-center">Welcome to the Admin Dashboard</h1>

        <!-- Flash Messages -->
        <% if (messages.length > 0) { %>
            <div class="flash-message">
                <% messages.forEach((message) => { %>
                    <div class="alert alert-<%= message.type %>" role="alert">
                        <%= message.text %>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <!-- Request/Assistance Section -->
        <section class="request-assistance-section p-4 my-5">
            <h3 class="text-center mb-4">Request/Assistance</h3>
        
            <!-- Dashboard Navigation -->
            <div class="mb-4 text-center">
                <a href="/admin/request-donations" class="btn btn-primary">View Donation Requests</a>
            </div>
        
            <!-- Dashboard Statistics in Table Format -->
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Category</th>
                        <th scope="col">Count</th>
                        <th scope="col">Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Total Requests</td>
                        <td><%= totalRequests %></td>
                        <td>Number of donation requests received.</td>
                    </tr>
                    <tr>
                        <td>Pending Requests</td>
                        <td><%= pendingRequests %></td>
                        <td>Number of requests that are pending.</td>
                    </tr>
                    <tr>
                        <td>Completed Requests</td>
                        <td><%= completedRequests %></td>
                        <td>Number of requests that have been completed.</td>
                    </tr>
                    <tr>
                        <td>Rejected Requests</td>
                        <td><%= rejectedRequests %></td>
                        <td>Number of requests that have been rejected.</td>
                    </tr>
                </tbody>
            </table>
        </section>

        <!-- Queries Section -->
        <section class="queries-section p-4 my-5">
            <h3 class="text-center mb-4">Queries</h3>

            <!-- Dashboard Navigation -->
            <div class="mb-4 text-center">
                <a href="/admin/check-queries" class="btn btn-primary">View All Queries</a>
            </div>

            <!-- Queries Statistics in Table Format -->
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Category</th>
                        <th scope="col">Count</th>
                        <th scope="col">Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Total Queries</td>
                        <td><%= totalQueries %></td>
                        <td>Number of queries submitted by users.</td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
